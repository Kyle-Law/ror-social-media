<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
      
      <li>
        Name: 
        <span class="profile-link">
          <%= link_to user.name,  user_path(user), class: 'profile-link' %>
          <% if user != current_user %>
          <%= link_to "Add Friend", friendships_path(friend_id: user.id), method: :post%>
          <% end %>

        </span>
      </li>
    <% end %>
  </ul>
</section>
